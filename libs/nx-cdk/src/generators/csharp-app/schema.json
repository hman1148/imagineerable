{
  "$schema": "https://json-schema.org/schema",
  "$id": "CSharpApp",
  "title": "",
  "type": "object",
  "properties": {
    "appSubDirectory": {
      "type": "string",
      "description": "The subdirectory path for the application",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Specify the subdirectory for your C# CDK application (will be placed in the applications directory)"
    },
    "implicitDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Projects this stack depends on (optional)",
      "x-dropdown": "projects"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags to categorize the project"
    }
  },
  "required": ["appSubDirectory"],
  "additionalProperties": false
}
